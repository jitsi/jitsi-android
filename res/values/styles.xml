<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="JitsiTheme" parent="@android:style/Theme.Holo">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSize">@dimen/actionbar_height</item>
        <!-- <item name="android:windowNoTitle">true</item> -->
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="JitsiLoginTextView" parent="@android:style/Widget.Holo.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/whitefield</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp|showCustom</item>
        <item name="android:icon">@drawable/actionbaricon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:customNavigationLayout">@layout/action_bar</item>
        <item name="android:padding">@dimen/action_bar_padding</item>
    </style>

    <style name="SmallFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MediumFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LargeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Call info section header -->
    <style name="CallInfo.SectionHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- Call info header used for property names -->
    <style name="CallInfo.Header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!-- Call info values style -->
    <style name="CallInfo.Value" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <!-- Call info style of values displayed in single line -->
    <style name="CallInfo.ValueSingleLine" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!-- Notification buttons style -->
    <style name="NotificationCtrlButton" >
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="NotificationTitle"
           parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
    </style>

    <style name="ScreenPadding">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_top</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>
</resources>